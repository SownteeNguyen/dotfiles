* {
    bg-col:  #24273a;
    bg-col-light: #24273a;
    border-col: #89b4fa;
    selected-col: #24273a;
    blue: #8aadf4;
    green: #a6e3a1;
    fg-col: #cad3f5;
    fg-col2: #ed8796;
    grey: #6e738d;
    base: #1e1e2e;

    width: 800px;
    height: 500px;
}

element-text, element-icon , mode-switcher {
    background-color: inherit;
    text-color:       inherit;
}

window {
    border: 4px;
    border-color: @border-col;
    border-radius: 20px;
    background-color: @bg-col;
}

mainbox {
    background-color: @bg-col;
}

inputbar {
    children: [prompt,entry];
    background-color: @bg-col;
    border-radius: 5px;
    padding: 2px;
}

prompt {
    background-color: @blue;
    padding: 6px;
    text-color: @bg-col;
    border-radius: 3px;
    margin: 20px 0px 0px 20px;
}

textbox-prompt-colon {
    expand: false;
    str: ":";
}

entry {
    padding: 6px;
    margin: 20px 0px 0px 10px;
    text-color: @fg-col;
    background-color: @bg-col;
}

listview {
    border: 0px 0px 0px;
    padding: 6px 0px 0px;
    margin: 10px 0px 0px 10px;
    columns: 2;
    lines: 5;
    background-color: @selected-col;
}

element {
    padding: 10px;
    background-color: @bg-col;
    text-color: @green  ;
}

element-icon {
    size: 40px;
}

element selected {
    background-color:  @selected-col ;
    text-color: @fg-col2  ;
}

mode-switcher {
    spacing: 0;
}

button {
    padding: 10px;
    background-color: @bg-col-light;
    text-color: @grey;
    vertical-align: 0.5; 
    horizontal-align: 0.5;
}

button selected {
  background-color: @blue;
  text-color: @bg-col;
}
